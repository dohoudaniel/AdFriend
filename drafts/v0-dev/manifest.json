{
    "manifest_version": 3,
    "name": "AdFriend",
    "version": "1.0",
    "description": "Transform ad spaces into positive, interactive widgets",
    "permissions": [
      "activeTab",
      "storage",
      "scripting",
      "notifications"
    ],
    "background": {
        "service_worker": "background_process.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": "logo-removedbg-preview.png"
    },
    "icons": {
      "16": "logo-removedbg-preview.png",
      "48": "logo-removedbg-preview.png",
      "128": "logo-removedbg-preview.png"
    },
    "host_permissions": ["http://*/*", "https://*/*"]
  }