{
    "manifest_version": 3,
    "name": "Adfriend",
    "version": "0.5",
    "description": "Adfriend is designed to replace a chrome ads on the browser with some positive and helpful content",
    "permissions": ["activeTab", "scripting"],
    "background": {
        "service_worker": "background_process.js"
    },
    "icons": {
        "16": "ui/icons/logo.png",
        "48": "ui/icons/logo.png",
        "128": "ui/icons/logo.png"
    },
    "action": {
        "default_popup": "ui/ui_interface.html",
        "default_icon": "ui/icons/logo.png"
    },
    "host_permissions": ["http://*/*", "https://*/*"]
}
