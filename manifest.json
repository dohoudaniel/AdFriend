{
    "manifest_version": 3,
    "name": "AdFriend - Ad Counter",
    "version": "1.0",
    "description": "Counts the number of ads on a webpage",
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon-16.png",
        "48": "icons/icon-48.png",
        "128": "icons/icon-128.png"
      }
    }
  }
  